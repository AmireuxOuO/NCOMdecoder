#############################################################
#                                                           #
# Make file for the NComToCsv example using the NCOMdecoder #
#                                                           #
#############################################################

#Directory variables
EXAMPLES_DIR=examples
LIBRARY_DIR =nav

#Compiler settings
CC          =gcc

#Example files
_EXAMPLES = NComToCsv.c
EXAMPLES  = $(patsubst %,$(EXAMPLES_DIR)/%,$(_EXAMPLES))

#Library files
_LIBRARY = NComRxC.c NComRxC.h
LIBRARY  = $(patsubst %,$(LIBRARY_DIR)/%,$(_LIBRARY))

NComToCsv: $(LIBRARY)
	$(CC) -o $@ $^ $(EXAMPLES)

.PHONY: clean

